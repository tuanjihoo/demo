<div class="container align-right"><button class="btn btn-default btn-logout">Logout</button></div>
<div class="container block-signin">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4 col-xs-12">
            <div class="panel panel-default form-signin">
                <div class="panel-heading  text-center">Wellcome</div>
                    <div class="panel-body">
                       <p>Name: <strong><%= user.name %></strong></p>
                       <p>Email: <strong><%= user.email %></strong></p>
                       <p>Created at: <strong><%= user.createdAt %></strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('.btn-logout').on('click', function() {

            $.ajax({
                url: '/logout',
                method: 'POST',
                dataType: 'JSON',
                data: {},
                success: function(res) {
                    if (res.status != 'success') {
                        toastr.error(res.data.message, 'Error')
                    } else {
                        setTimeout(function() {
                            window.location.href = '/';
                        }, 1000)
                    }
                }
            })
        })
    })
</script>